// src/components/Header.astro
---
<header id="header" class="header-container">
  <div class="nav-wrapper">
    
    <a href="/" class="logo">
      <img src="/assets/img/LogoFamiliaPastoral.png" alt="Logo" class="logo-img" />
      <h1 class="sitename">Familia Pastoral</h1>
    </a>

    <nav id="navmenu" class="navmenu">
      <ul class="nav-list">
        <li><a href="/" class="active">Inicio</a></li>

        
        <li class="dropdown">
          <a href="#">
            <span>Pilares de la Vida</span> 
            <i class="bi bi-chevron-down"></i>
          </a>
          <ul class="dropdown-menu">
             <li class="dropdown">
                <a href="#"><span>Vida Personal</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                <ul>
                  <li><a href="/vision-vida">Visión de Vida</a></li>
                  <li><a href="#">Hábitos Saludables</a></li>
                  <li><a href="#">Trabajo Ministerial</a></li>
                </ul>
              </li>
            <li><a href="#"><i class="bi bi-heart-fill"></i> Vida Matrimonial</a></li>
            <li><a href="#"><i class="bi bi-emoji-smile-fill"></i> Crianza de Hijos</a></li>
            <li><a href="#"><i class="bi bi-people-fill"></i> Familia Extendida</a></li>
          </ul>
        </li>
        <li><a href="/eventos">Eventos</a></li>
        <li><a href="/galeria">Galería</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contact" class="contact-link">Contact</a></li>
      </ul>
      
      <button class="mobile-nav-toggle" aria-label="Menu">
        <i class="bi bi-list"></i>
      </button>
    </nav>

  </div>
</header>

<script src="/assets/js/main.js" is:inline></script>

<style>
  /* ============================================
     ESTILOS BASE (ESCRITORIO Y GENERAL)
     ============================================ */
  .header-container {
    position: sticky;
    top: 0;
    width: 100%;
    height: 80px;
    background-color: #293441;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.15);
    z-index: 1000;
    display: flex;
    align-items: center;
  }

  .nav-wrapper {
    width: 100%;
    padding: 0 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Logo */
  .logo {
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .logo h1 {
    font-size: 26px;
    font-weight: 700;
    color: #fff;
    margin: 0;
    font-family: 'Raleway', sans-serif;
  }
  .logo-img {
    height: 100px; 
    width: auto;
    object-fit: contain;
  }

  /* Menú Escritorio */
  .nav-list {
    display: flex; /* Se muestra en fila */
    list-style: none;
    gap: 30px;
    margin: 0;
    padding: 0;
  }

  .nav-list a {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 500;
    font-size: 16px;
    transition: color 0.3s;
  }
  .nav-list a:hover, .nav-list a.active { color: #fff; }

  /* Botón móvil oculto en escritorio */
  .mobile-nav-toggle { display: none; }

  /* Dropdowns Base */
  .dropdown { position: relative; }
  .dropdown-menu {
    position: absolute;
    top: 100%;
    right: 0;
    background: #fff;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    display: none;
    list-style: none;
    padding: 10px 0;
    min-width: 180px;
    border-radius: 4px;
    z-index: 2000;
  }
  .dropdown-menu a {
    color: #333 !important;
    padding: 10px 20px;
    display: block;
  }
  .dropdown:hover .dropdown-menu { display: block; }


  /* ============================================
     ESTILOS MÓVIL (SOLO MENORES A 992PX)
     ============================================ */
  @media (max-width: 992px) {
    
    /* 1. Botón Hamburguesa visible */
/* En la sección @media (max-width: 992px) */
    .mobile-nav-toggle {
      display: block;
      background: none;
      border: none;
      font-size: 32px;
      cursor: pointer;
      color: #fff;
      /* AGREGAR ESTAS DOS LÍNEAS IMPORTANTE: */
      position: relative; 
      z-index: 9999; 
    }

    /* 2. El menú se oculta por defecto */
    .nav-list {
      display: none; /* OCULTO */
      flex-direction: column;
      position: absolute;
      top: 80px;
      left: 0;
      width: 100%;
      height: calc(100vh - 80px);
      background-color: #293441;
      padding: 20px;
      overflow-y: auto;
      border-top: 1px solid rgba(255,255,255,0.1);
    }

    /* 3. CLASE MÁGICA: Cuando JS la agrega, se muestra */
    .nav-list.mobile-active {
      display: flex !important;
    }

    /* Ajustes visuales de enlaces en móvil */
    .nav-list a {
      display: block;
      padding: 15px 0;
      font-size: 18px;
      color: #fff;
      border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    /* Ajustes dropdown en móvil */
    .dropdown-menu {
      position: static;
      display: none; /* Se maneja con hover/click */
      width: 100%;
      background: rgba(0,0,0,0.2);
      box-shadow: none;
    }
    .dropdown-menu a { color: #fff !important; padding-left: 30px; }
    .dropdown:hover .dropdown-menu { display: block; }
  }
</style>